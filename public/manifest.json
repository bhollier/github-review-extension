{
  "manifest_version": 3,
  "name": "Github Review Extension",
  "version": "1.0",
  "description": "Extension for viewing open Github PRs to review",
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "static/js/background.js"
  },
  "icons": {
    "240": "logo240.png"
  },
  "action": {
    "default_icon": {
      "240": "logo240.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
